{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "strictNullChecks": true, // add if using `base` template
    "allowJs": true, // required, and included with all Astro templates
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "moduleResolution": "bundler"
  },
  "exclude": [
    "dist"
  ]
}